{
    "name": "quadraecom/pest-plugin-selectors",
    "description": "Add CSS selector-based testing capabilities to Pest",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin",
        "css",
        "selector"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "laravel/framework": "^8.0 || ^9.0",
        "pestphp/pest": "^1.0",
        "pestphp/pest-plugin": "^1.0",
        "pestphp/pest-plugin-laravel": "^1.2",
        "symfony/css-selector": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "QuadraEcom\\PestSelectors\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "orchestra/testbench": "^6.7.2 || ^7.0",
        "pestphp/pest-dev-tools": "dev-master"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest --colors=always"
    }
}
